		"eslint-config-prettier": "^6.9.0",
		"eslint-plugin-prettier": "^3.1.2",
		"husky": "^4.3.0",
		"lint-staged": "^10.4.0",
		"prettier": "^1.19.1"
	},
	"lint-staged": {
		"src/**/*.js": [
